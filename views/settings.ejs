        <!-- Categories section -->
        <h2 class="edit-general-settings-wrapper_title">Your Categories</h2>
        <form action="/account/edit-categories?_method=PUT" id="add-new" class="add-new" method="POST">
            <input type="text" placeholder="Add a new Category +" name="categories">
            <button class="update" id="update-new-category" type="submit">SUBMIT</button>
        </form>
        <% blog.categories.forEach( category => { %>
            <div class="categorie">
                <div class="category-div-wrapper">
                    <div class="category-text"><%= category %></div>
                    <div class="delete">DELETE</div>
                    <div class="category-<%=category.split(' ').join('-')%>" id="delete-route">
                        <form class="delete-route-form" action="/account/delete-categories/<%=category.toString()%>?_method=DELETE" method="POST">
                            <h3>Are you sure you want to delete the <%= category %> category</h3>
                            <span onclick="removePromptProf()" class="cancel-post">Cancel</span>
                            <button type="submit" class="send-post">Yes Delete</button>
                        </form>
                    </div>
                </div>
